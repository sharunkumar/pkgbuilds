# Maintainer: Sharun <sharun@sharunkumar.com>
pkgname=delta-shell-meta
pkgver=1
pkgrel=3
pkgdesc="Meta package for Delta Shell"
arch=('any')
url="https://github.com/sharunkumar/pkgbuilds"
license=('custom:meta')
depends=(
	# Required
	'aylurs-gtk-shell'           # The main shell components
	'libastal-hyprland'          # Hyprland integration for astal
	'libastal-niri'              # Niri integration for astal
	'libastal-apps'              # Application library for astal
	'libastal-battery'           # Battery status library for astal
	'libastal-bluetooth'         # Bluetooth library for astal
	'libastal-mpris'             # MPRIS library for astal
	'libastal-network'           # Network library for astal
	'libastal-notifd'            # Notification daemon for astal
	'libastal-powerprofiles-git' # Power profiles library for astal
	'libastal-tray'              # System tray library for astal
	'libastal-wireplumber'       # Wireplumber library for astal
	'dart-sass'                  # Sass compiler

	# Optional (made required)
	'cliphist'              # for clipboard
	'wl-clipboard'          # for clipboard
	'gpu-screen-recorder'   # to record screen from control center
	'geoclue'               # to autoload the location for weather
	'power-profiles-daemon' # to switch between power profiles
	'brightnessctl'         # for control screen brightness
	'bluez'                 # for connect to bluetooth devices
	'libgtop'               # for cpu usage

	# 'tuned-ppd'             # to switch between power profiles
)
options=(!emptydirs)
pkgver() {
	echo "$pkgver"
}
package() {
	mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
	echo "This is a meta package." >"$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
