# Maintainer: Sharun Kumar <sharun@sharunkumar.com>

pkgname=fastfetch-symlink-neofetch
pkgver=1
pkgrel=1
pkgdesc='Creates symbolic link of fastfetch to neofetch'
arch=('any')
depends=('fastfetch')
provides=('neofetch')
conflicts=('neofetch')

package() {
    install -dm755 "$pkgdir/usr/bin/"
    cd "$pkgdir/usr/bin/"

    chmod 755 *

    for _link in neofetch; do
        ln -s nvim $_link
    done
}
