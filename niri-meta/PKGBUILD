# Maintainer: Sharun <sharun@sharunkumar.com>
pkgname=niri-meta
pkgver=1.0
pkgrel=1
pkgdesc="Meta package for Niri and its recommended environment"
arch=('any')
url="https://github.com/sharunkumar/pkgbuilds"
license=('custom:meta')
depends=('niri')
# based on https://wiki.archlinux.org/title/Niri
optdepends=(
  'fuzzel: application launcher'
  'mako: notification daemon'
  'waybar: Wayland bar'
  'xdg-desktop-portal-gtk: screen sharing support'
  'xdg-desktop-portal-gnome: screen sharing support (GNOME variant)'
  'alacritty: default terminal'
  'swaybg: set wallpaper background'
  'swayidle: idle management'
  'swaylock: lock screen on idle'
  'xwayland-satellite: X11 application support in Wayland'
)
options=(!emptydirs)
pkgver() {
  echo "$pkgver"
}
package() {
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  echo "This is a meta package." > "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
